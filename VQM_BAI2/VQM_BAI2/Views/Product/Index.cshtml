@model IEnumerable<Product>
@{
    ViewData["Title"] = "Danh sách sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center mb-4 text-primary">DANH SÁCH SẢN PHẨM</h2>

    <div class="text-end mb-3">
        <a asp-action="Add" class="btn btn-success">+ Thêm sản phẩm</a>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm h-100">
                    <img src="@item.ImageUrl" class="card-img-top" style="height: 250px; object-fit: cover;" />
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text text-muted">@item.Description</p>
                        <p class="text-danger fw-bold">@item.Price.ToString("N0") VNĐ</p>
                    </div>
                    <div class="card-footer text-center">
                        <a asp-action="Display" asp-route-id="@item.Id" class="btn btn-info btn-sm">Xem</a>
                        <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Sửa</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Xóa</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
