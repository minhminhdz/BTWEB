@model VQM_BAI2.Models.Product
<h2>Product Details</h2>

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-primary mb-4">CHI TIẾT SẢN PHẨM</h2>

    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImageUrl" class="img-fluid mb-3" style="border: 1px solid #ccc;" />
            @if (Model.ImageUrls != null)
            {
                <div class="d-flex flex-wrap gap-2">
                    @foreach (var img in Model.ImageUrls)
                    {
                        <img src="@img" class="img-thumbnail" style="width: 100px; height: 100px; object-fit: cover;" />
                    }
                </div>
            }
        </div>

        <div class="col-md-6">
            <h4>@Model.Name</h4>
            <p>@Model.Description</p>
            <p class="text-danger fw-bold">Giá: @Model.Price.ToString("N0") VNĐ</p>
            <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
        </div>
    </div>
</div>

