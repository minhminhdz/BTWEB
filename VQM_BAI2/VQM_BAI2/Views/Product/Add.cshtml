@model VQM_BAI2.Models.Product
@using Microsoft.AspNetCore.Mvc.Rendering


@{
    ViewData["Title"] = "Thêm sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-primary mb-4">THÊM SẢN PHẨM MỚI</h2>

    <form asp-action="Add" enctype="multipart/form-data" class="border p-4 rounded shadow">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Price" class="form-label"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        </div>

        <div class="mb-3">
            <label>Danh mục</label>
            <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-select"></select>
        </div>

        <div class="mb-3">
            <label>Ảnh chính</label>
            <input type="file" name="imageUrl" class="form-control" />
        </div>

        <div class="mb-3">
            <label>Ảnh phụ (có thể chọn nhiều)</label>
            <input type="file" name="imageUrls" class="form-control" multiple />
        </div>

        <button type="submit" class="btn btn-primary">Thêm</button>
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </form>
</div>
