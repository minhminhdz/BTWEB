@model VQM_G3_webbanhang.Models.Product
@{
    ViewData["Title"] = "Sửa sản phẩm";
}
<h2>Sửa sản phẩm</h2>

<form asp-action="Update" enctype="multipart/form-data" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="CategoryId"></label>
        <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-control"></select>
    </div>
    <div class="form-group">
        <label>Ảnh đại diện hiện tại:</label><br />
        <img src="@Model.ImageUrl" style="width: 100px;" />
        <input type="file" name="imageUrl" class="form-control" />
    </div>
    <div class="form-group">
        <label>Ảnh phụ hiện tại:</label>
        <div class="row">
            @foreach (var img in Model.Images ?? new List<VQM_G3_webbanhang.Models.ProductImage>())
            {
                <div class="col-3">
                    <img src="@img.Url" class="img-thumbnail" style="height: 100px; object-fit: cover;" />
                    <input type="checkbox" name="deleteImageIds" value="@img.Id" /> Xóa
                </div>
            }
        </div>
    </div>
    <div class="form-group">
        <label>Thêm ảnh phụ mới:</label>
        <input type="file" name="imageUrls" multiple class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Lưu</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>
