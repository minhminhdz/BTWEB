@model IEnumerable<VQM_G3_webbanhang.Models.Category>

<h2 class="text-center mb-4" style="color: #333;">Danh Sách Danh Mục</h2>

<!-- Add New Category Button -->
<div class="text-end mb-3">
    <a asp-action="Add" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Thêm Danh Mục Mới
    </a>
</div>

<!-- Category Table -->
<table class="table table-striped table-hover">
    <thead class="bg-dark text-white">
        <tr>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td>
                    <a asp-action="Update" asp-route-id="@category.Id" class="btn btn-warning btn-sm">
                        <i class="bi bi-pencil"></i> Sửa
                    </a>
                    <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger btn-sm"
                       onclick="return confirm('Bạn có chắc chắn muốn xóa danh mục này không?');">
                        <i class="bi bi-trash"></i> Xóa
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
