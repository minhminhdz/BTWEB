<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Minh Store</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/VQM-G3-webbanhang.styles.css" asp-append-version="true" />
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold text-warning" asp-area="" asp-controller="Home" asp-action="Index">Minh Store</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-white hover-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white hover-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white hover-link" asp-area="" asp-controller="Product" asp-action="Test">Danh Sách Sản Phẩm(test)</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white hover-link" asp-area="" asp-controller="Product" asp-action="Index">Danh Sách Sản Phẩm</a>
                    </li>
                </ul>

                <!-- Dropdown Cài đặt -->
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-white hover-link" href="#" id="settingsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Cài đặt
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end bg-dark">
                            <li><a class="dropdown-item text-white hover-link" asp-area="" asp-controller="Categories" asp-action="Index">Sửa Danh Mục</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - VQM-G3-webbanhang - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <!-- Custom Style -->
    <style>
        .hover-link:hover {
            color: #ffc107 !important;
            transition: 0.3s ease;
        }

        .navbar-brand {
            font-size: 1.5rem;
        }

        .carousel-caption h5 {
            color: #FF6F61;
            font-weight: bold;
        }

        .carousel-caption p {
            color: #ffffff;
        }

        .carousel-caption a.btn {
            color: white;
            border: 2px solid white;
            font-weight: 500;
        }

        .dropdown-menu .dropdown-item:hover {
            background-color: #343a40;
            color: #ffc107 !important;
        }
    </style>
</body>
</html>
